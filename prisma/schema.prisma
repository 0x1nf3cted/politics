// schema.prisma
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-py"
}

model Newspaper {
  id          String    @id @unique @default(cuid())
  name        String
  orientation String
  url         String
  Article     Article[]
}

model Article {
  id           String      @id @unique @default(cuid())
  source       Newspaper   @relation(fields: [newspaperId], references: [id])
  url          String
  author       String
  title        String
  description  String
  category     String
  date         String
  newspaperId  String
  Collection   Collection? @relation(fields: [collectionId], references: [id])
  collectionId String?
}

model Collection {
  id       String    @id @unique @default(cuid())
  date     String
  title    String
  category String
  articles Article[]
}
